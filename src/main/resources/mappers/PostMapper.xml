<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.instakilogram.project.post.dao.PostDAO">
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`userName`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{userName}
			,#{content}
			,#{imagePath}
			,now()
			,now()
		)
	</insert>
	
	<select id="selectPostList" resultType="com.instakilogram.project.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`userName`
			,`content`
			,`imagePath`
			,createdAt`
			,updatedAt`
		FROM
			`post`
		ORDER BY `updatedAt` DESC
	</select>
	
	<delete id="deletePost" parameterType="int">
		DELETE FROM `post`
		WHERE
			`id` = #{postId}
	</delete>
	
	<select id="selectPost" resultType="com.instakilogram.project.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`userName`
			,`content`
			,`imagePath`
			,createdAt`
			,updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
	</select>
	

	<select id="selectCommentList" resultType="com.instakilogram.project.post.model.Comment">
		SELECT	
			*
		FROM
			`comment`
	</select>
</mapper>